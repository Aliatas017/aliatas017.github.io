    <script>
        // --- GERÇEK KOORDİNATLI DAĞ LİSTESİ ---
        const mountainData = [
            // Doğu Anadolu
            { name: "Ağrı Dağı", lat: 39.70, lon: 44.30, type: "volkanik" },
            { name: "Tendürek", lat: 39.35, lon: 43.90, type: "volkanik" },
            { name: "Süphan", lat: 38.93, lon: 42.83, type: "volkanik" },
            { name: "Nemrut (V)", lat: 38.62, lon: 42.24, type: "volkanik" },
            { name: "Cilo (Buzul)", lat: 37.48, lon: 44.00, type: "kivrim" },
            { name: "Mercan", lat: 39.40, lon: 39.50, type: "kivrim" },
            { name: "Palandöken", lat: 39.85, lon: 41.28, type: "kivrim" },
            
            // İç Anadolu
            { name: "Erciyes", lat: 38.53, lon: 35.45, type: "volkanik" },
            { name: "Hasan Dağı", lat: 38.13, lon: 34.05, type: "volkanik" }, 
            { name: "Melendiz", lat: 38.07, lon: 34.40, type: "volkanik" },
            { name: "Karadağ", lat: 37.38, lon: 33.15, type: "volkanik" },
            { name: "Karacadağ (K)", lat: 37.83, lon: 33.66, type: "volkanik" },
            { name: "Elmadağ", lat: 39.80, lon: 33.00, type: "kivrim" },

            // Güneydoğu
            { name: "Karacadağ (U)", lat: 37.66, lon: 39.83, type: "volkanik" },

            // Ege & Marmara
            { name: "Kula", lat: 38.58, lon: 28.52, type: "volkanik" },
            { name: "Uludağ", lat: 40.06, lon: 29.21, type: "volkanik" }, 
            { name: "Yıldız", lat: 41.77, lon: 27.52, type: "kivrim" },
            { name: "Kaz Dağları", lat: 39.75, lon: 26.83, type: "kirik" },
            { name: "Madra Dağı", lat: 39.20, lon: 27.05, type: "kirik" },
            { name: "Yunt Dağı", lat: 38.80, lon: 27.20, type: "kirik" },
            { name: "Bozdağlar", lat: 38.35, lon: 28.10, type: "kirik" },
            { name: "Aydın Dağları", lat: 37.95, lon: 28.00, type: "kirik" },
            { name: "Menteşe", lat: 37.20, lon: 28.50, type: "kirik" },

            // Akdeniz
            { name: "Amanos", lat: 36.75, lon: 36.33, type: "kirik" },
            { name: "Bey Dağları", lat: 36.60, lon: 30.11, type: "kivrim" },
            { name: "Geyik", lat: 36.90, lon: 32.20, type: "kivrim" },
            { name: "Sultan", lat: 38.50, lon: 31.25, type: "kivrim" },
            { name: "Dedegöl", lat: 37.66, lon: 31.33, type: "kivrim" },
            { name: "Bolkar", lat: 37.25, lon: 34.60, type: "kivrim" },
            { name: "Aladağlar", lat: 37.80, lon: 35.15, type: "kivrim" },
            { name: "Tahtalı", lat: 38.30, lon: 36.40, type: "kivrim" },
            { name: "Binboğa", lat: 38.15, lon: 36.90, type: "kivrim" },

            // Karadeniz
            { name: "Küre", lat: 41.76, lon: 33.55, type: "kivrim" },
            { name: "Ilgaz", lat: 41.07, lon: 33.86, type: "kivrim" },
            { name: "Köroğlu", lat: 40.58, lon: 31.85, type: "kivrim" },
            { name: "Canik", lat: 40.86, lon: 36.56, type: "kivrim" },
            { name: "Giresun D.", lat: 40.50, lon: 38.50, type: "kivrim" },
            { name: "Kaçkar", lat: 40.93, lon: 41.16, type: "kivrim" },
            { name: "Kop", lat: 40.02, lon: 40.52, type: "kivrim" },
            { name: "Mescit", lat: 40.50, lon: 41.20, type: "kivrim" },
            { name: "Yalnızçam", lat: 41.00, lon: 42.20, type: "kivrim" }
        ];

        const game = {
            svg: null,
            geoBounds: { minLon: 180, maxLon: -180, minLat: 90, maxLat: -90 },
            viewBox: { w: 1000, h: 450 },
            scale: 1, offsetX: 0, offsetY: 0,
            
            state: { score: 0, remaining: [], current: null, active: false },
            drawnLabels: [], // Çizilen etiketlerin pozisyonlarını tutar (Collision için)

            init: function() {
                document.getElementById('json-file').addEventListener('change', (e) => this.handleFileUpload(e));
                lucide.createIcons();
            },

            handleFileUpload: function(e) {
                const file = e.target.files[0];
                if (!file) return;

                const reader = new FileReader();
                reader.onload = (event) => {
                    try {
                        const jsonData = JSON.parse(event.target.result);
                        if (!jsonData.features) throw new Error("JSON features eksik.");
                        this.loadMap(jsonData);
                        document.getElementById('upload-overlay').style.display = 'none';
                        this.start();
                    } catch (err) {
                        this.showError("Dosya hatası: " + err.message);
                    }
                };
                reader.readAsText(file, "UTF-8");
            },

            showError: function(msg) {
                const el = document.getElementById('error-msg');
                el.innerText = msg;
                el.classList.remove('hidden');
            },

            scanCoords: function(coords) {
                if (Array.isArray(coords) && coords.length === 2 && typeof coords[0] === 'number') {
                    const lon = coords[0];
                    const lat = coords[1];
                    if (lon < this.geoBounds.minLon) this.geoBounds.minLon = lon;
                    if (lon > this.geoBounds.maxLon) this.geoBounds.maxLon = lon;
                    if (lat < this.geoBounds.minLat) this.geoBounds.minLat = lat;
                    if (lat > this.geoBounds.maxLat) this.geoBounds.maxLat = lat;
                } else if (Array.isArray(coords)) {
                    coords.forEach(c => this.scanCoords(c));
                }
            },

            project: function(lon, lat) {
                const x = (lon - this.geoBounds.minLon) * this.scale + this.offsetX;
                const y = this.viewBox.h - ((lat - this.geoBounds.minLat) * this.scale + this.offsetY);
                return { x, y };
            },

            loadMap: function(data) {
                this.svg = document.getElementById('game-map');
                const layerProvinces = document.getElementById('layer-provinces');
                const layerCities = document.getElementById('layer-cities');

                data.features.forEach(f => this.scanCoords(f.geometry.coordinates));

                const lonSpan = this.geoBounds.maxLon - this.geoBounds.minLon;
                const latSpan = this.geoBounds.maxLat - this.geoBounds.minLat;
                const padding = 20;

                const width = this.viewBox.w - 2 * padding;
                const height = this.viewBox.h - 2 * padding;
                const scaleX = width / lonSpan;
                const scaleY = height / latSpan;
                
                this.scale = Math.min(scaleX, scaleY);
                this.offsetX = (this.viewBox.w - lonSpan * this.scale) / 2;
                this.offsetY = (this.viewBox.h - latSpan * this.scale) / 2;

                data.features.forEach(f => {
                    const d = this.createPathD(f.geometry);
                    const path = document.createElementNS("http://www.w3.org/2000/svg", "path");
                    path.setAttribute("d", d);
                    path.setAttribute("class", "province-path");
                    layerProvinces.appendChild(path);

                    const center = this.getCentroid(f.geometry);
                    if(center) {
                        const g = document.createElementNS("http://www.w3.org/2000/svg", "g");
                        g.setAttribute("class", "city-group");
                        
                        const dot = document.createElementNS("http://www.w3.org/2000/svg", "circle");
                        dot.setAttribute("cx", center.x);
                        dot.setAttribute("cy", center.y);
                        dot.setAttribute("class", "city-dot");
                        
                        const text = document.createElementNS("http://www.w3.org/2000/svg", "text");
                        text.setAttribute("x", center.x);
                        text.setAttribute("y", center.y + 3.5);
                        text.setAttribute("class", "city-label");
                        text.textContent = f.properties.name;
                        
                        g.appendChild(dot);
                        g.appendChild(text);
                        layerCities.appendChild(g);
                    }
                });
                this.drawMountains();
            },

            createPathD: function(geometry) {
                let d = "";
                const polys = geometry.type === "Polygon" ? [geometry.coordinates] : geometry.coordinates;
                polys.forEach(poly => {
                    poly.forEach(ring => {
                        let ringD = "M";
                        ring.forEach((pt, i) => {
                            const p = this.project(pt[0], pt[1]);
                            ringD += `${p.x.toFixed(1)},${p.y.toFixed(1)} `;
                            if (i === 0) ringD += "L";
                        });
                        ringD += "Z ";
                        d += ringD;
                    });
                });
                return d;
            },

            getCentroid: function(geometry) {
                let sx = 0, sy = 0, count = 0;
                const traverse = (c) => {
                    if (typeof c[0] === 'number') {
                        const p = this.project(c[0], c[1]);
                        sx += p.x; sy += p.y; count++;
                    } else c.forEach(traverse);
                };
                traverse(geometry.coordinates);
                return count ? { x: sx/count, y: sy/count } : null;
            },

            drawMountains: function() {
                const layer = document.getElementById('layer-mountains');
                layer.innerHTML = "";
                this.state.remaining = [...mountainData];
                this.drawnLabels = []; // Reset collision cache

                mountainData.forEach(m => {
                    const p = this.project(m.lon, m.lat);
                    const g = document.createElementNS("http://www.w3.org/2000/svg", "g");
                    g.setAttribute("class", "mountain-marker");
                    g.setAttribute("transform", `translate(${p.x}, ${p.y})`);
                    g.setAttribute("data-name", m.name);
                    g.setAttribute("data-type", m.type);
                    
                    g.onclick = (e) => { e.stopPropagation(); this.checkAnswer(m, g); };

                    const hitArea = document.createElementNS("http://www.w3.org/2000/svg", "circle");
                    hitArea.setAttribute("class", "hit-area");
                    g.appendChild(hitArea);

                    const shape = document.createElementNS("http://www.w3.org/2000/svg", "path");
                    shape.setAttribute("class", "mountain-shape");
                    
                    // ÖZEL ŞEKİLLER
                    if (m.type === 'volkanik') {
                        // Yanardağ İkonu (Üçgen + Karlı Tepe)
                        shape.setAttribute("d", "M0,-6 L-5,4 L5,4 Z");
                        // Volkanik için ekstra beyaz tepe ekleyelim (Opsiyonel ama şık durur)
                        const snow = document.createElementNS("http://www.w3.org/2000/svg", "path");
                        snow.setAttribute("d", "M0,-6 L-1.5,-3 L0,-2 L1.5,-3 Z");
                        snow.setAttribute("fill", "white");
                        snow.setAttribute("class", "mountain-shape"); // Aynı animasyonlar uygulansın
                        g.appendChild(snow);
                    } else if (m.type === 'kirik') {
                        // Kırık Blok (İki dikdörtgen)
                        shape.setAttribute("d", "M-4,-4 L-1,-4 L-1,4 L-4,4 Z M1,-2 L4,-2 L4,6 L1,6 Z");
                    } else {
                        // Kıvrım (Tepe/Yarım Daire)
                        shape.setAttribute("d", "M-5,4 Q0,-8 5,4 Z");
                    }
                    g.prepend(shape); // Snow'un altına gelsin diye prepend
                    layer.appendChild(g);
                    m.el = g;
                });
            },

            start: function() {
                this.state.active = true;
                this.state.score = 0;
                this.updateUI();
                this.nextQuestion();
                
                const panel = document.getElementById('question-panel');
                panel.style.opacity = 1;
                panel.style.pointerEvents = 'auto';
                panel.style.transform = 'translate(-50%, 0) scale(1)';
            },

            nextQuestion: function() {
                if (this.state.remaining.length === 0) {
                    this.showStatus("Tebrikler! Tüm dağları buldun!", "bg-green-600");
                    setTimeout(() => location.reload(), 4000);
                    return;
                }
                const idx = Math.floor(Math.random() * this.state.remaining.length);
                this.state.current = this.state.remaining[idx];
                document.getElementById('target-name').innerText = this.state.current.name;
            },

            checkAnswer: function(mountain, el) {
                if (!this.state.active) return;
                
                if (mountain.name === this.state.current.name) {
                    el.classList.add('found');
                    this.addLabel(mountain);
                    
                    this.state.score += 10;
                    this.state.remaining = this.state.remaining.filter(m => m.name !== mountain.name);
                    this.updateUI();
                    this.showStatus("Doğru!", "bg-green-600");
                    setTimeout(() => this.nextQuestion(), 800);
                } else {
                    el.classList.add('shake');
                    setTimeout(() => el.classList.remove('shake'), 500);
                    this.showStatus("Yanlış! Tekrar dene.", "bg-red-600");
                }
            },

            hint: function() {
                if (!this.state.active || !this.state.current) return;
                const target = mountainData.find(m => m.name === this.state.current.name);
                
                if (target && target.el) {
                    const layer = document.getElementById('layer-effects');
                    const p = this.project(target.lon, target.lat);
                    
                    const circle = document.createElementNS("http://www.w3.org/2000/svg", "circle");
                    circle.setAttribute("cx", p.x);
                    circle.setAttribute("cy", p.y);
                    circle.setAttribute("r", 5);
                    circle.setAttribute("fill", "none");
                    circle.setAttribute("stroke", "#ef4444");
                    circle.setAttribute("stroke-width", "2");
                    circle.setAttribute("class", "pulse-ring");
                    
                    layer.appendChild(circle);
                    setTimeout(() => layer.removeChild(circle), 2000);
                }
            },

            // --- AKILLI ETİKETLEME (ANTI-COLLISION) ---
            addLabel: function(mountain) {
                const g = document.getElementById('layer-labels');
                const lineLayer = document.getElementById('layer-lines');
                const p = this.project(mountain.lon, mountain.lat);
                
                // Başlangıç pozisyonu (Pinin hemen üstü)
                let labelY = p.y - 12;
                let labelHeight = 12;
                
                // Çarpışma Kontrolü
                // Basit bir döngü ile diğer etiketlerle çakışıyor mu kontrol et
                // Eğer çakışıyorsa yukarı ötele
                let collision = true;
                let safetyLoop = 0;
                
                while(collision && safetyLoop < 10) {
                    collision = false;
                    for (let drawn of this.drawnLabels) {
                        // X ekseninde yakın mı? (Yatay çakışma)
                        if (Math.abs(p.x - drawn.x) < 30) { 
                            // Y ekseninde çakışıyor mu?
                            if (Math.abs(labelY - drawn.y) < labelHeight) {
                                labelY -= labelHeight + 2; // Yukarı kaydır
                                collision = true;
                            }
                        }
                    }
                    safetyLoop++;
                }

                // Pozisyonu kaydet
                this.drawnLabels.push({ x: p.x, y: labelY });

                // Eğer çok yukarı gittiyse çizgi çek
                if (p.y - labelY > 15) {
                    const line = document.createElementNS("http://www.w3.org/2000/svg", "line");
                    line.setAttribute("x1", p.x);
                    line.setAttribute("y1", p.y - 6); // Pinin tepesi
                    line.setAttribute("x2", p.x);
                    line.setAttribute("y2", labelY + 4); // Etiketin altı
                    line.setAttribute("class", "label-connector");
                    lineLayer.appendChild(line);
                }

                // Etiket Grubu
                const group = document.createElementNS("http://www.w3.org/2000/svg", "g");
                group.setAttribute("transform", `translate(${p.x}, ${labelY})`);
                
                const rect = document.createElementNS("http://www.w3.org/2000/svg", "rect");
                rect.setAttribute("class", "map-label-bg");
                rect.setAttribute("height", 10);
                rect.setAttribute("y", -5);
                
                const text = document.createElementNS("http://www.w3.org/2000/svg", "text");
                text.setAttribute("class", "map-label-text");
                text.textContent = mountain.name;
                
                const width = mountain.name.length * 4.5 + 6;
                rect.setAttribute("width", width);
                rect.setAttribute("x", -width/2);

                group.appendChild(rect);
                group.appendChild(text);
                g.appendChild(group);
            },

            showStatus: function(msg, bgClass) {
                const el = document.getElementById('status-msg');
                el.innerText = msg;
                el.className = `absolute bottom-10 left-1/2 -translate-x-1/2 text-white px-6 py-3 rounded-full shadow-2xl font-bold transition-all duration-300 transform translate-y-0 opacity-100 ${bgClass}`;
                setTimeout(() => {
                    el.classList.replace('translate-y-0', 'translate-y-4');
                    el.classList.replace('opacity-100', 'opacity-0');
                }, 1500);
            },

            updateUI: function() {
                document.getElementById('score').innerText = this.state.score;
                document.getElementById('remaining').innerText = this.state.remaining.length;
            }
        };

        game.init();
    </script>
</body>
</html>

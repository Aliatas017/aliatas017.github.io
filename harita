        .label-connector { stroke: rgba(15, 23, 42, 0.6); stroke-width: 1px; pointer-events: none; stroke-dasharray: 2,2; }

        /* Tıklama Alanı */
        .hit-area { fill: transparent; r: 9; cursor: pointer; }
        
